<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="600.0" prefWidth="500.0" spacing="5.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Button fx:id="btnConfig" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onConfigClick" text="CONFIG" />
      <Label text="Main Characteristic:" />
      <ChoiceBox fx:id="cbMainCharacteristic" maxWidth="1.7976931348623157E308" prefWidth="150.0" />
      <Label fx:id="lblItemType" text="Item Type:" />
      <ChoiceBox fx:id="cbItemType" maxWidth="1.7976931348623157E308" prefWidth="150.0" />
      <Label text="Max Price:" />
      <TextField fx:id="tfieldMaxPrice" text="100" />
      <Label text="Quantity:" />
      <TextField fx:id="tfieldQuantity" text="10" />
      <HBox alignment="CENTER_LEFT" prefWidth="200.0" spacing="15.0">
         <children>
            <CheckBox fx:id="chboxUseTraits" mnemonicParsing="false" selected="true" text="Traits" />
            <Button fx:id="btnGenerate" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onGenerateClick" text="Generate" HBox.hgrow="ALWAYS" />
            <Button fx:id="btnClear" mnemonicParsing="false" onAction="#onClearClick" text="Clear" />
         </children>
      </HBox>
      <ListView fx:id="lviewGenerated" prefHeight="200.0" prefWidth="200.0" style="-fx-focus-color: #C8C8C8; -fx-faint-focus-color: transparent;" VBox.vgrow="ALWAYS" />
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
